<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.nextshop_api.review.repository.ReviewMapper">
	<select id="findReviewStatsByProductId" resultType="ReviewStatsDto">
		SELECT rating,
               COUNT(*) AS count
		FROM reviews
		WHERE product_id = #{productId}
		GROUP BY rating
	</select>
</mapper>