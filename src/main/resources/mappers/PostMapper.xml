<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.nextshop_api.post.repository.PostMapper">
	<sql id="postSql">
		SELECT p.id,
		       p.title,
		       p.description,
		       p.image_url AS post_image,
		       p.datetime,
		       a.name AS author_name,
		       a.role AS author_role,
		       a.image_url AS author_image
		FROM posts p
		INNER JOIN authors a ON p.author_id = a.id
	</sql>

	<select id="findAllPosts" resultType="PostDto">
		<include refid="postSql" />
	</select>
	
	<select id="findPostById" resultType="PostDto">
		<include refid="postSql" />
		WHERE p.id = #{id}
	</select>
</mapper>